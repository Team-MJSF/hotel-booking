{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_"
    }],
    "no-console": ["warn"],
    "no-undef": "off"
  },
  "overrides": [
    {
      "files": ["**/migrations/*.ts"],
      "rules": {
        "quotes": "off"
      }
    },
    {
      "files": ["**/*.spec.ts"],
      "rules": {
        "@typescript-eslint/no-unused-vars": ["warn", { 
          "varsIgnorePattern": "^description$",
          "argsIgnorePattern": "^(_|description)$"
        }],
        "@typescript-eslint/no-namespace": "off",
        "no-console": "off"
      }
    }
  ]
}